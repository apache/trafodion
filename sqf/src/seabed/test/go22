xclient=t22ms

# setup
. ./gosetup

echo "********* TEST `date` t22 - $xclient *********"
tcheck -setup
. ./goshellsetup
cat > $TMP <<eof
node
! Start the monitor processes across the cluster
startup
! Start the client process
exec {nowait name \$CLI} $xclient $*
exec {name \$CLI2} $xclient $*
! Display process status to see new processes
ps
! Wait for our processes to stop, then stop the monitor processes and exit.
wait \$CLI
shutdown
exit
eof
. ./goshellfilter
tcheck $xclient

