if [[ $# -gt 0 ]]; then
  echo
  echo "This wrapper script(trafci) does not accept any arguments."
  echo "Please use trafci.sh for command line arguments"
  echo
  exit 1
fi

if [[ -z $TRAF_HOME && -r /etc/trafodion/conf/client_config ]]; then
  source /etc/trafodion/conf/client_config
fi

# If we have client config or server config, no arguments needed
if [[ -r /etc/trafodion/conf/client_config || -r "$TRAF_CONF/dcs/dcs-env.sh" ]]; then
  $TRAF_HOME/trafci/bin/trafci.sh
else
  # try localhost
  $TRAF_HOME/trafci/bin/trafci.sh -h localhost:23400
fi
