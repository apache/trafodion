<configuration>
  <property>
    <name>integration.test.endurance.workers</name>
    <value>1</value>
    <description>Number of worker threads in the test</description>
  </property>
  <property>
    <name>integration.test.endurance.loops</name>
    <value>1</value>
    <description>Number of loops to perform for each thread</description>
  </property>
  <property>
    <name>integration.test.endurance.delay</name>
    <value>1000</value>
    <description>Delay in millisecs between each open and close</description>
  </property>
  <property>
    <name>integration.test.endurance.elapsed</name>
    <value>0</value>
    <description>Number of seconds for each thread to run</description>
  </property>
  <property>
    <name>hpt4jdbc.properties.catalog</name>
    <value>SEA</value>
    <description>catalog to use</description>
  </property>
  <property>
    <name>hpt4jdbc.properties.schema</name>
    <value>QUEST</value>
    <description>Schema to use</description>
  </property>
  <property>
    <name>hpt4jdbc.properties.url</name>
    <value>jdbc:hpt4jdbc://ip:port/:</value>
    <description>jdbc url</description>
  </property>
  <property>
    <name>hpt4jdbc.properties.user</name>
    <value>user</value>
    <description>The user name to use</description>
  </property>
  <property>
    <name>hpt4jdbc.properties.password</name>
    <value>password</value>
    <description>The password to use</description>
  </property>
</configuration>
