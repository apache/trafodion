-- full correct syntax
-- AFTER INSERT using NEW ROW


obey TEST_1_1_1_1(clean_up);
obey TEST_1_1_1_1(set_up);
log   LOG_1_1_1_1 clear;
obey TEST_1_1_1_1(tests);
LOG;
obey TEST_1_1_1_1(clean_up);
exit;

?section clean_up
set schema CAT1.SCHM;
drop trigger trig1;
obey clearTables;

?section set_up
SET SCHEMA cat1.schm;
?section tests

------------------------------------------------------------------
-- 	TEST CASE
------------------------------------------------------------------
CREATE TRIGGER trig1 AFTER INSERT
	ON tab1A
	REFERENCING NEW AS newrow
	FOR EACH ROW
		WHEN (newrow.a > newrow.b)
		
		INSERT INTO tab1B VALUES (newrow.c, newrow.d);

---------------------------------------------------------------------------------
