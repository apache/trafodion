-- Dropping of underlying objects
-- Try to drop a table on which a trigger is defined


obey TEST_3_2_1(clean_up);
obey TEST_3_2_1(set_up);
log   LOG_3_2_1 clear;
obey TEST_3_2_1(tests);
LOG;
obey TEST_3_2_1(clean_up);
exit;

?section clean_up
set schema CAT1.SCHM;
 
DROP TRIGGER tr;

obey clearTables;

?section set_up

SET SCHEMA cat1.schm;

create table tab1a2 like tab1a;

CREATE TRIGGER tr AFTER INSERT
	ON tab1A2
	REFERENCING NEW AS newrow
	FOR EACH ROW

		INSERT INTO tab1B VALUES (newrow.a,newrow.b);
?section tests

------------------------------------------------------------------
-- 	TEST CASE
------------------------------------------------------------------

DROP TABLE tab1A2;

--------------------------------------------------------
