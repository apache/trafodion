-- conflict sets
-- RW-conflicting set
-- runs on cat1.schm and cat1.schm_alt
----------------------------------------

-- clean_up on all schemas

--control query default ATTEMPT_ESP_PARALLELISM 'OFF';

set schema CAT1.SCHM;
obey TEST_6_2_1_1(clean_up);
set schema CAT1.SCHM_ALT;
obey TEST_6_2_1_1(clean_up);

-- start logging
log   LOG_6_2_1_1 clear;

set schema CAT1.SCHM;
obey TEST_6_2_1_1(set_up);
obey TEST_6_2_1_1(tests);
obey TEST_6_2_1_1(clean_up);

-- switch schemas
set schema CAT1.SCHM_ALT;
obey TEST_6_2_1_1(set_up);
obey TEST_6_2_1_1(tests);

-- end logging
LOG;

-- cleanup (last schema)
obey TEST_6_2_1_1(clean_up);

exit;
----------------------------------------

?section clean_up

DROP TRIGGER rt1;
DROP TRIGGER rt2;
DROP TRIGGER st3;
obey clearTables2;

?section set_up

INSERT INTO T1 VALUES (1,1);
INSERT INTO T1 VALUES (1,2);
INSERT INTO T1 VALUES (1,3);

---------------------------------
-- DEFINE TRIGGER rt1
---------------------------------


CREATE TRIGGER rt1
AFTER UPDATE ON T1
REFERENCING OLD AS oldR
FOR EACH ROW
WHEN (oldR.a <> oldR.b)
INSERT INTO T1 VALUES (oldR.a+1, oldR.b);


---------------------------------
-- DEFINE TRIGGER rt2
---------------------------------


CREATE TRIGGER rt2
AFTER UPDATE ON T1
REFERENCING OLD AS oldR, NEW AS newR
FOR EACH ROW
WHEN (oldR.b <> 2)
INSERT INTO T2 VALUES (newR.a, newR.B);

---------------------------------
-- DEFINE TRIGGER st3
---------------------------------

CREATE TRIGGER st3
AFTER UPDATE ON T1
INSERT INTO T3 VALUES (3,3);
?section tests

------------------------------------------------------------------
--          TEST CASE
------------------------------------------------------------------

UPDATE T1 SET b = b+1;

SELECT * FROM T1 ORDER BY a,b; -- check result

SELECT * FROM T2 ORDER BY a,b; -- check result

SELECT * FROM T3 ORDER BY a,b; -- check result

------------------------------------------------------------------
--           END
------------------------------------------------------------------
