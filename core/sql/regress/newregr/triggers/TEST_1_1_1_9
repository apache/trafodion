-- full correct syntax
-- BEFORE DELETE using OLD ROW 


obey TEST_1_1_1_9(clean_up);
obey TEST_1_1_1_9(set_up);
log   LOG_1_1_1_9 clear;
obey TEST_1_1_1_9(tests);
LOG;
obey TEST_1_1_1_9(clean_up);
exit;

?section clean_up
set schema CAT1.SCHM;
drop trigger trig9;
obey clearTables;

?section set_up
SET SCHEMA cat1.schm;

?section tests

------------------------------------------------------------------
-- 	TEST CASE
------------------------------------------------------------------
CREATE TRIGGER trig9 BEFORE DELETE
	ON tab1A
	REFERENCING OLD AS oldrow
	FOR EACH ROW
		
		SIGNAL SQLSTATE 's1111' ('this is a message');

