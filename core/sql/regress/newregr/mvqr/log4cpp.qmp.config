# log4cxx configuration for QMS

log4j.rootLogger=INFO, rootAppender

log4j.logger.rootAppender=org.apache.log4j.RollingFileAppender
log4j.logger.rootAppender.fileName=qmp.log
log4j.logger.rootAppender.maxFileSize=100000000
log4j.logger.rootAppender.maxBackupIndex=1
log4j.logger.rootAppender.addPid=false
log4j.logger.rootAppender.layout=org.apache.log4j.PatternLayout
log4j.logger.rootAppender.layout.ConversionPattern=%d, %p, %c, %m%n

# qmscommon
log4j.logger.QRCommon=ERROR
log4j.logger.QRCommon.IPC=ERROR
log4j.logger.QRCommon.Memory=INFO
log4j.logger.QRCommon.Range=INFO
log4j.logger.QRCommon.Tracer=ERROR

# QMM
log4j.logger.Qmp=INFO
