-- lineitem
log;
sh import cat.tpcd.lineitem -I ./tpcd/tpcdtemp/lineitem.tbl -U ./tpcd/tpcdtemp/lineitem.fmt -r -F 17000 -C 2500 >>logmv215_RU;
log LOGMV215_RU;


REFRESH mv4q9;
