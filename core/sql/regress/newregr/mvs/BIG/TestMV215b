obey TESTMV215B(CLEAN_UP);

obey TESTMV215B(SET_UP);
log LOGMV215B clear;
-- Run Tests
	set schema cat.tpcd;
	obey TESTMV215B(TEST1);
	obey TESTMV215B(TEST2);
-- Clean and exit
log;
obey TESTMV215B(CLEAN_UP);

obey ./TPCD/SHOW_OBJECTS_TPCD;
exit;

