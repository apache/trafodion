-- Standard working schema
set schema c.s;
-- Physical partitioning info on SHOWDDL
set envvar SQLMX_CMP_DESCRIBE_MORE_INFO;
-- Info about MVs over a table in SHOWDDL
set envvar SQLMX_SHOW_USING_MVS;
-- Log table structure display
set envvar DEBUG_LOG_TABLE;
-- Warning about redefinition timestamp
--set envvar RECOMP_WARN;
control query default RECOMPILATION_WARNINGS 'ON';
-- Extended syntax for work with log tables
set PARSERFLAGS 1;

