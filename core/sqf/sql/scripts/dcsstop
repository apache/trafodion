DCS_STOP_CMD=${DCS_INSTALL_DIR}/bin/stop-dcs.sh

if [ -z ${DCS_INSTALL_DIR} ]; then
   echo "DCS Install dir location not set via the env variable DCS_INSTALL_DIR."
   exit 1;
fi

if [ ! -e ${DCS_STOP_CMD} ]; then
   echo "${DCS_STOP_CMD} not found."
   exit 1;
fi

if [[ ! -z $ENABLE_HA ]]; then
   ${DCS_INSTALL_DIR}/bin/scripts/dcsunbind.sh
fi

echo "Shutting down the DCS environment now"
cd ${DCS_INSTALL_DIR}
${DCS_STOP_CMD}
cds
