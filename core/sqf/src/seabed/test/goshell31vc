xclient=$1
shift
if [ "$1" = "-device" ]; then
	type="type TSE"
	zone="set {process \$CLI} ZONE=0"
	nid="nid 0"
	device="set {process \$CLI} DEVICE=\$CLI-P"
	shift
fi
n3=0
if [ "$1" = "-n3" ]; then
	n3=1
	nid="nid 0"
	shift
fi
shutdown=shutdown
if [ "$1" = "-noshut" ]; then
	shutdown=""
	shift
fi

# setup
if [ $n3 = 0 ]; then
. ./gosetupcl
else
. ./gosetupcl3
fi

echo "********* TEST `date` $xclient *********"
tcheck -setup
. ./goshellsetup
cat > $TMP <<eof
node
! Start the monitor processes across the cluster
startup
! Start the client process
$zone
$device
node info
exec {$nid $type name \$CLI} $xclient -client $*
! Display process status to see new processes
ps
! Wait for our processes to stop, then stop the monitor processes and exit.
$shutdown
exit
eof
. ./goshellfilter
tcheck $xclient

