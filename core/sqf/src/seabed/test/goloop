echo "goloop $*"
cluster=" "
if [ "$1" = "-cluster" ]; then
	cluster=-cluster
	shift
fi
verbose=" "
if [ "$1" = "-verbose" ]; then
	verbose=-verbose
	shift
fi
loop=1
if [ "$1" = "-loop" ]; then
	shift
	loop=$1
	shift
fi
cmdname=$1
shift
args=$*
cmd="$cmdname $args"
inx=0
while [ $inx -lt $loop ]; do
	echo "$inx: $cmd"
	eval $cmd
	inx=`expr $inx + 1`
done
