attach=0
echo "$*"|grep '\-attach' >/dev/null
if [ $? = 0 ]; then
	attach=1
fi
if [ $attach = 1 ]; then
	. ./gosetupcl
	if [ "$1" = "-attach" ]; then
		shift
	fi
	if [ "$1" = "-loop" ]; then
		shift
		loop=$1
		shift
	fi
	go69mon -start
	sleep 2
	echo t142cli $*
	count=0
	while [ $count -lt $loop ]; do
		t142cli -attach $*
		count=`expr $count + 1`
	done
	go69mon -stop
else
	goshelleg1 t142cli $*
fi
