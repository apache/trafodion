if [ $# -lt 2 ]; then
	echo "goshell84 <cli> <srv>"
	exit 1
fi
xclient=$1
xserver=$2
shift
shift

# setup
. ./gosetupcl
. ./gosetupdown

echo "********* TEST `date` $xclient/$xserver *********"
tcheck -setup
. ./goshellsetup
cat > $TMP <<eof
node
! Start the monitor processes across the cluster
startup
! Start the test server
exec {nowait,name \$SRV2, nid 0} $xserver -server $*
exec {nowait,name \$SRV, nid 0} $xserver -server $*
delay 2
! Display process status of our processes
ps
! Start the client process
exec {nowait,name \$CLI, nid 1} $xclient -client $*
! Display process status to see new processes
ps
delay 4
down 1
! Wait for our processes to stop, then stop the monitor processes and exit.
wait \$SRV2
wait \$SRV
wait \$CLI
shutdown
exit
eof
. ./goshellfilter
tcheck $xclient

