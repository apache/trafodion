if [ $# -lt 2 ]; then
	echo "goshell93 <cli> <srv>"
	exit 1
fi
xclient=$1
xserver=$2
shift
shift

# setup
. ./gosetup

maxsp=1
if [ "$1" = "-maxsp" ]; then
	maxsp="$2"
	shift
	shift
fi

echo "********* TEST `date` $xclient/$xserver *********"
tcheck -setup
. ./goshellsetup
echo "node" >> $TMP
echo "! Start the monitor processes across the cluster" >> $TMP
echo "startup" >> $TMP
echo "! Start the test server" >> $TMP
n=1
while [[ $n -le $maxsp ]]; do
echo "exec {nowait,name \$srv$n} $xserver -server $*" >> $TMP
n=`expr $n + 1`
done
echo "! Display process status of our processes" >> $TMP
echo "ps" >> $TMP
echo "! Start the client process" >> $TMP
echo "exec {$nid0 name \$CLI} $xclient -client -maxsp $maxsp $*" >> $TMP
echo "! Display process status to see new processes" >> $TMP
echo "ps" >> $TMP
echo "! Wait for our processes to stop, then stop the monitor processes and exit." >> $TMP
n=1
while [[ $n -le $maxsp ]]; do
echo "wait \$srv$n" >> $TMP
n=`expr $n + 1`
done
echo "shutdown" >> $TMP
echo "exit" >> $TMP
echo "eof" >> $TMP
. ./goshellfilter
tcheck $xclient
