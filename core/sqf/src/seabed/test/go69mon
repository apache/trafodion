if [ "$1" = "-start" ]; then
export SQ_SHELL_NOCWD=1
export SQ_CONFIGDB=$TRAF_VAR/sqconfig.db
shift
echo "********* run monitor *********"
shell <<eof
node
startup
exit
eof
else
. ./goshellsetup
cat > $TMP <<eof
ps
shutdown !
eof
. ./goshellafilter
fi
